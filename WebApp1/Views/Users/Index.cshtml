@model IEnumerable<WebApp1.Models.user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-header">Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Avatar
        </th>
        <th>
            Username
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Address
        </th>
        <th>
            Birthday
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    
    <tr>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.pic))
            {
                <img src="@Url.Content(item.pic)" alt="Not found" width="80" height="80" />
            } else
            {
                <img src="@Url.Content("~/Images/placeholder.jpg")" alt="Alternate Text" width="80" height="80" />
            }

        </td>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.username))
            {
                @Html.DisplayFor(modelItem => item.username)
            }

        </td>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.fname))
            {
                @Html.DisplayFor(modelItem => item.fname)
            }
            @*@Html.DisplayFor(modelItem => item.fname)*@
        </td>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.lname))
            {
                @Html.DisplayFor(modelItem => item.lname)
            }
            @*@Html.DisplayFor(modelItem => item.lname)*@
        </td>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.address))
            {
                @Html.DisplayFor(modelItem => item.address)
            }
            @*@Html.DisplayFor(modelItem => item.address)*@
        </td>
        <td>
            @if (item.dob.HasValue)
            {
                @String.Format("{0:MMMM dd, yyyy}", item.dob)
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
